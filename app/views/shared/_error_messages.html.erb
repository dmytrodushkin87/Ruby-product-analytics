<div class="row">
  <div class="col-md-6">
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="red"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div></div>